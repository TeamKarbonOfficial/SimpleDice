<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingActivity" >

    <CheckBox
        android:id="@+id/CheckBoxSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_checkbox_sound"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Space5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/CheckBoxAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_checkbox_animation"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Space6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/TextViewDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_text_duration"
        android:textSize="20sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/SeekBarDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/Space7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/TextViewVibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_text_vibration"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/SpinnerVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ButtonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_button_save"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:onClick="save_button_clicked"/>

</LinearLayout>
