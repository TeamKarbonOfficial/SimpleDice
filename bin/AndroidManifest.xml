<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamkarbon.android.simpledice"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamkarbon.android.simpledice.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamkarbon.android.simpledice.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.teamkarbon.android.simpledice" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamkarbon.android.simpledice" />
        </activity>
        <activity
            android:name="com.teamkarbon.android.simpledice.SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="com.teamkarbon.android.simpledice.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamkarbon.android.simpledice.MainActivity" />
        </activity>
    </application>

</manifest>
